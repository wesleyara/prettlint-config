{
  "name": "prettlint-config",
  "version": "1.1.3",
  "description": "A lib for configure Eslint, Prettier and editorconfig in your project.",
  "bin": "lib/script.js",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "dev": "ts-node src/index.ts",
    "build": "rimraf lib && tsc --declaration",
    "format": "prettier --check src",
    "format:fix": "prettier --write src",
    "lint": "eslint --ext js,ts src",
    "lint:fix": "eslint --ext js,ts src --fix",
    "prepare": "husky install",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "prettier --write .",
      "eslint --ext js,ts . --fix"
    ]
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyara/prettlint-config.git"
  },
  "keywords": [
    "typescript",
    "javascript"
  ],
  "author": "Wesley Ara√∫jo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wesleyara/prettlint-config/issues"
  },
  "homepage": "https://github.com/wesleyara/prettlint-config#readme",
  "dependencies": {
    "axios": "^1.2.0",
    "down-git-files": "^1.0.1",
    "inquirer": "8.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "utils-react": "^1.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/inquirer": "8.1.0",
    "@types/node": "^18.11.9",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vitest": "^0.25.3"
  }
}
