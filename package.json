{
  "name": "prettlint-config",
  "version": "1.1.9",
  "description": "A lib for configure Eslint, Prettier and editorconfig in your project.",
  "bin": "lib/script.js",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "dev": "ts-node src/index.ts",
    "build": "rimraf lib && tsc --declaration",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install",
    "postversion": "git push && git push --tags && rm -rf build/temp"
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": [
      "eslint . --fix"
    ]
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesleyara/prettlint-config.git"
  },
  "keywords": [
    "typescript",
    "javascript"
  ],
  "author": "Wesley Ara√∫jo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wesleyara/prettlint-config/issues"
  },
  "homepage": "https://github.com/wesleyara/prettlint-config#readme",
  "dependencies": {
    "axios": "^1.2.0",
    "down-git-files": "^1.0.1",
    "essentials-utils": "^1.2.6",
    "inquirer": "8.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.1.0",
    "@eslint/js": "^9.19.0",
    "@types/inquirer": "8.1.0",
    "@types/node": "^18.11.9",
    "@types/shelljs": "^0.8.11",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.7.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^1.4.0"
  }
}
